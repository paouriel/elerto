        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:textColor="#939393"
        android:weightSum="0"
        android:layout_above="@+id/relativeLayout2">

        <LinearLayout
